{
  "name": "screenshat",
  "version": "1.1.0",
  "description": "Take screenshots and videos of a website at different widths",
  "type": "module",
  "bin": "./screenshat.js",
  "main": "./screenshat.js",
  "scripts": {
    "lint": "eslint *.js",
    "test": "screenshat --url https://www.google.com --min-width 640 --max-width 700 --output-gif"
  },
  "keywords": [
    "responsive",
    "screenshot"
  ],
  "author": "Adam Wolf <adamwolf@feelslikeburning.com>",
  "homepage": "https://github.com/adamwolf/screenshat#readme",
  "bugs": {
    "url": "https://github.com/adamwolf/screenshat/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamwolf/screenshat.git"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "ffmpeg-progress-wrapper": "^2.0.1",
    "image-size": "^1.1.1",
    "playwright": "^1.43.1",
    "verbosity": "^3.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0"
  }
}
